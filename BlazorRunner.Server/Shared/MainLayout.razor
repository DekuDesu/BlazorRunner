@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
            <button class="btn btn-outline-primary mx-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasImport" aria-controls="offcanvasImport" title="Import Scripts and Assemblies">
                Import
            </button>
            <button class="btn btn-outline-primary mx-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#consoleScrolling" aria-controls="consoleScrolling" title="View Global Console">
                Global Console
            </button>
            <button class="btn btn-outline-primary mx-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling" title="View Running Scripts">
                Running Scripts
            </button>
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>
