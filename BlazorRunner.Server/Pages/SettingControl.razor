<li class="list-group-item list-group-item-action border border-bottom" style="text-align: center;">
    <h5>@Setting.Name</h5>
    <div class="text-muted">@(Setting.Description ?? "")</div>
    @switch (ParamType)
    {
        case TypeCode.Boolean:
            <BoolControl OnChange="UpdateValue"></BoolControl>
            break;
        case TypeCode.Char:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="char" EnableSliderConstraints="false" EnableBitShift="true" LimitTextInputLength="1" Min="0" Max="65535" StepAmount="1" SliderTextTypeOverride="typeof(ushort)"></PrimitiveSlider>
            break;
        case TypeCode.SByte:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="sbyte" EnableBitShift="false" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            break;
        case TypeCode.Byte:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="byte" EnableBitShift="false" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            break;
        case TypeCode.Int16:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="short" EnableBitShift="false" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            break;
        case TypeCode.UInt16:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="ushort" EnableBitShift="false" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            break;
        case TypeCode.Int32:
            if (Setting.Value is Enum enumType)
            {
                <EnumControl OnChange="UpdateValue" DefaultValue="Setting.Value" EnumType="enumType.GetType()"></EnumControl>
            }
            else
            {
                <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="int" EnableBitShift="true" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            }

            break;
        case TypeCode.UInt32:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="uint" EnableBitShift="true" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            break;
        case TypeCode.Int64:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="long" EnableBitShift="true" Min="Min" Max="Max" StepAmount="StepSize" EnableSlider="false"></PrimitiveSlider>
            break;
        case TypeCode.UInt64:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="ulong" EnableBitShift="true" Min="Min" Max="Max" StepAmount="StepSize" EnableSlider="false"></PrimitiveSlider>
            break;
        case TypeCode.Single:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="float" EnableBitShift="false" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            break;
        case TypeCode.Double:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="double" EnableBitShift="false" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            break;
        case TypeCode.Decimal:
            <PrimitiveSlider DefaultValue="Setting.Value" OnChange="UpdateValue" T="decimal" EnableBitShift="false" Min="Min" Max="Max" StepAmount="StepSize"></PrimitiveSlider>
            break;
        case TypeCode.String:
            <StringPicker DefaultValue="Setting.Value" OnChange="UpdateValue"></StringPicker>
            break;
        case TypeCode.Object:
            if (Setting.Value is Guid guid)
            {
                <GuidPicker DefaultValue="guid" OnChange="UpdateValue"></GuidPicker>
            }
            break;
        default:
            break;
    }
</li>