<div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
    <div class="input-group">
        <div class="input-group-text font-weight-bold" id="btnGroupAddon">int</div>
        <input type="text" class="form-control" placeholder="int32 (-2.147B — 2.147B)" aria-label="int32 (-2.147B — 2.147B)" aria-describedby="btnGroupAddon" @bind-value=InputText style="min-width: 100px;">
        <button class="btn btn-outline-primary" @onclick="()=> { SelectedInt++; }">
            <span class="text-monospace">+</span>
        </button>
        <button class="btn btn-outline-primary" @onclick="()=> { SelectedInt--; }">
            <span class="text-monospace">-</span>
        </button>
        <button class="btn btn-outline-primary" @onclick="()=> { SelectedInt >>= 1; }">
            <span class="text-monospace">@($"<<")</span>
        </button>
        <button class="btn btn-outline-primary" @onclick="()=> { SelectedInt <<= 1; }">
            <span class="text-monospace">@($">>")</span>
        </button>
    </div>

</div>